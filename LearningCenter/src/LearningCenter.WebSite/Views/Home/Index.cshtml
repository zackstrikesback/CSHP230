@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>The Learning Center</h1>
    <p class="lead">The place for Technology Classes</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>@Html.ActionLink("Class List", "Classes", "Home", routeValues: null,
                                htmlAttributes: new { title = "Classes" })</h2>
        <p>See all of our class offerings.</p>
    </div>
    <div class="col-md-4">
        <h2>@Html.ActionLink("Your Enrolled Classes", "Enrolled", "Home", routeValues: null,
                                htmlAttributes: new { title = "Enrolled" })</h2>
        <p>See the classes you are enrolled in.</p>
    </div>
    <div class="col-md-4">
        <h2>@Html.ActionLink("Enrolled in a Class", "Enroll", "Home", routeValues: null,
                                htmlAttributes: new { title = "Enroll" })</h2>
        <p>Take a new class.</p>
    </div>
</div>